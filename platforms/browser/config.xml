<?xml version='1.0' encoding='utf-8'?>
<widget id="com.phonegap.helloworld" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0" xmlns:gap="http://phonegap.com/ns/1.0">
    <feature name="Camera">
        <param name="browser-package" value="Camera" />
    </feature>
    <feature name="Device">
        <param name="browser-package" value="Device" />
    </feature>
    <name>Planning Poker</name>
    <description>
        Planning Poker uses a deck of cards created by Pretty Pragmatic to stimulate your marketing and sales strategy. Pretty Pragmatic is a strategic marketing agency that believes in making sense sensational to achieve great results spanning from defining purpose to delivering profits.
    </description>
    <author email="rob@robertlowe.co.uk" href="https://www.robertlowe.co.uk">
        Robert Lowe Digital
    </author>
    <content src="index.html" />
    <access origin="*" />
    <access origin="*.prettypragmatic.com*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <preference name="orientation" value="portrait" />
    <preference name="DisallowOverscroll" value="true" />
    <preference name="android-minSdkVersion" value="14" />
    <preference name="StatusBarBackgroundColor" value="#1d1d1d" />
    <preference name="StatusBarStyle" value="lightcontent" />
</widget>
